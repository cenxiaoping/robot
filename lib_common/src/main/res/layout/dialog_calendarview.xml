<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/dialog_calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mcv_dateTextAppearance="@style/MaterialCalendarDateTextAppearance"
            app:mcv_headerTextAppearance="@style/MaterialCalendarHeaderTextAppearance"
            app:mcv_selectionColor="#439bff"
            app:mcv_tileHeight="55dp"
            app:mcv_tileWidth="60dp"
            app:mcv_weekDayLabels="@array/custom_myweekdays"
            app:mcv_weekDayTextAppearance="@style/MaterialCalendarWeekDayTextAppearance" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
