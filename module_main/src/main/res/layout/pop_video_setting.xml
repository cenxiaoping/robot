<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="78dp"
        android:layout_height="67.5dp"
        android:background="@drawable/setting_bg">


        <TextView
            android:id="@+id/temp0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:text="单集循环"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/video_set_one"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:src="@drawable/video_set_sel"
            app:layout_constraintBottom_toBottomOf="@id/temp0"
            app:layout_constraintStart_toEndOf="@id/temp0"
            app:layout_constraintTop_toTopOf="@id/temp0" />

        <TextView
            android:id="@+id/temp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="15dp"
            android:text="列表循环"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/video_set_all"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:src="@drawable/video_set_sel"
            app:layout_constraintBottom_toBottomOf="@id/temp1"
            app:layout_constraintStart_toEndOf="@id/temp1"
            app:layout_constraintTop_toTopOf="@id/temp1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>